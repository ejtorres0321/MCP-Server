# MySQL Database (AWS RDS - accessed via SSH tunnel)
DB_HOST=your-rds-endpoint.us-west-1.rds.amazonaws.com
DB_PORT=3306
DB_USER=stage
DB_PASSWORD=your_password_here
DB_NAME=bos
DB_CONNECTION_LIMIT=10
DB_SSL=false

# SSH Tunnel (set SSH_ENABLED=true to tunnel MySQL through SSH)
SSH_ENABLED=true
SSH_HOST=54.193.119.95
SSH_PORT=22
SSH_USER=forge
SSH_KEY_PATH=C:\Users\YourUser\.ssh\your_key_file
SSH_KEY_PASSPHRASE=your_passphrase_here
SSH_LOCAL_PORT=13306

# MCP Server
MCP_SERVER_PORT=3100
MCP_SERVER_NAME=manuelsolis-db-server
MCP_SERVER_VERSION=1.0.0

# Query Safety
MAX_QUERY_ROWS=1000
QUERY_TIMEOUT_MS=30000

# Logging
LOG_LEVEL=info
AUDIT_LOG_ENABLED=true

# CORS (for web app in Phase 2)
CORS_ORIGIN=http://localhost:3000
